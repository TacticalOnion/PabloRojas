<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="assets/icons/sparkles.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>Pablo Rojas</title>
	</head>
	<body>
		<div id="global-loader" style="
			position: fixed; 
			inset: 0;
			background: #fff;
			z-index: 9999;
			display: flex; 
			justify-content: center; 
			align-items: center;
			width: 100vw; height: 100vh;
			">
			<img src="/assets/gif/loading.gif" alt="Cargando..." style="width: 120px; height: 120px; object-fit: contain;">
		</div>

		<slot />

		<!--Water ripples -->
		<script is:inline src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
		<script is:inline src="/js/jquery.ripples.js"></script>
		<script is:inline src="/js/water-ripples.js"></script>

		<!-- Swiper -->
		<script src="../scripts/initSwiper.js"></script>

		<!-- Loader -->
		<script>
			window.addEventListener('load', function() {
				var loader = document.getElementById('global-loader');
				if(loader){
				loader.style.transition = "opacity 0.5s";
				loader.style.opacity = '0';
				setTimeout(function() { loader.style.display = "none"; }, 500);
				}
			});
		</script>


	</body>

</html>